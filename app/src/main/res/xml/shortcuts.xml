<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_chat"
        android:shortcutDisabledMessage="@string/chat_disable_msg"
        android:shortcutId="id_chat"
        android:shortcutLongLabel="@string/chat_long_label"
        android:shortcutShortLabel="@string/chat_short_label"
        tools:targetApi="n_mr1">

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.appshortcuts.MainActivity"
            android:targetPackage="com.example.appshortcuts" />

        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.appshortcuts.Chats"
            android:targetPackage="com.example.appshortcuts" />
    </shortcut>
</shortcuts>